{% extends 'base.html.twig' %}

{% block title %}Langues index{% endblock %}

{% block body %}
    <h1>Langues index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Langage</th>
                <th>Niveau</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for langue in langues %}
            <tr>
                <td>{{ langue.id }}</td>
                <td>{{ langue.titre }}</td>
                <td>{{ langue.langage }}</td>
                <td>{{ langue.niveau ? 'Yes' : 'No' }}</td>
                <td>
                    <a href="{{ path('app_langues_show', {'id': langue.id}) }}">show</a>
                    <a href="{{ path('app_langues_edit', {'id': langue.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_langues_new') }}">Create new</a>
{% endblock %}
