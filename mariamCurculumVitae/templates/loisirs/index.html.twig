{% extends 'base.html.twig' %}

{% block title %}Loisirs index{% endblock %}

{% block body %}
    <h1>Loisirs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Titre</th>
                <th>Type</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for loisir in loisirs %}
            <tr>
                <td>{{ loisir.id }}</td>
                <td>{{ loisir.titre }}</td>
                <td>{{ loisir.type }}</td>
                <td>{{ loisir.image }}</td>
                <td>
                    <a href="{{ path('app_loisirs_show', {'id': loisir.id}) }}">show</a>
                    <a href="{{ path('app_loisirs_edit', {'id': loisir.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="5">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_loisirs_new') }}">Create new</a>
{% endblock %}
